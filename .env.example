APP_NAME="Barbershop Premium"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=barbershop_db
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@barbershop.com"
MAIL_FROM_NAME="${APP_NAME}"

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your-server-key
MIDTRANS_CLIENT_KEY=your-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID=your-merchant-id

# Notification Settings
NOTIFICATION_SMS_PROVIDER=local
NOTIFICATION_SMS_API=https://api.local-sms.com/send
NOTIFICATION_SMS_KEY=your-sms-api-key

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Rate Limiting
RATE_LIMIT_BOOKING=10
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60

# Business Settings
BUSINESS_OPEN_HOUR=9
BUSINESS_CLOSE_HOUR=21
BUSINESS_CLOSED_DAYS=0  # Sunday = 0
WEEKEND_SURCHARGE=20    # 20% surcharge on Saturday
PEAK_HOUR_SURCHARGE=10  # 10% surcharge 6-8 PM

# Contact Information
